{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Nome do Data Factory",
			"defaultValue": "sars-covid-reporting"
		},
		"ls_ablob_sarscovidreport_connectionString": {
			"type": "secureString",
			"metadata": "Cadeia de caracteres segura para 'connectionString' de 'ls_ablob_sarscovidreport'"
		},
		"ls_adls_covidreportdb_accountKey": {
			"type": "secureString",
			"metadata": "Cadeia de caracteres segura para 'accountKey' de 'ls_adls_covidreportdb'"
		},
		"ls_adls_covidreportdb_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://covidreportdb.dfs.core.windows.net"
		},
		"ls_http_opendata_ecdc_europe_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://github.com"
		},
		"tg_ingest_population_data_properties_typeProperties_scope": {
			"type": "string",
			"defaultValue": "/subscriptions/ab767c8d-fee2-4266-9651-311bc8d0819e/resourceGroups/databricks-course/providers/Microsoft.Storage/storageAccounts/sarscovidreport"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI para a conta de armazenamento contendo os modelos do ARM vinculados"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Token SAS para a conta de armazenamento contendo modelos do ARM vinculados"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "sars-covid-reporting_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"ls_ablob_sarscovidreport_connectionString": {
						"value": "[parameters('ls_ablob_sarscovidreport_connectionString')]"
					},
					"ls_adls_covidreportdb_accountKey": {
						"value": "[parameters('ls_adls_covidreportdb_accountKey')]"
					},
					"ls_adls_covidreportdb_properties_typeProperties_url": {
						"value": "[parameters('ls_adls_covidreportdb_properties_typeProperties_url')]"
					},
					"ls_http_opendata_ecdc_europe_properties_typeProperties_url": {
						"value": "[parameters('ls_http_opendata_ecdc_europe_properties_typeProperties_url')]"
					},
					"tg_ingest_population_data_properties_typeProperties_scope": {
						"value": "[parameters('tg_ingest_population_data_properties_typeProperties_scope')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}